<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#607D8B"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="srkcsiitm.com.gwalior.Register"
    tools:showIn="@layout/activity_register">

    <TextView
        android:id="@+id/SignUpMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Sign Up For Gwalior Diary"
        android:textColor="@color/MyGrey"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/newline"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/SignUpMsg"
        android:background="#A7FFEB" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/newline"
        android:layout_marginTop="73dp"
        android:hint="First Name"
        android:textColorHint="#FAFAFA" />

    <EditText
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/first_name"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textColorHint="@color/MyGrey" />

    <EditText
        android:id="@+id/cntct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/last_name"
        android:layout_alignRight="@+id/last_name"
        android:layout_below="@+id/last_name"
        android:ems="10"
        android:hint="Contact No."
        android:inputType="phone"
        android:textColorHint="@color/MyGrey" />

    <EditText
        android:id="@+id/newpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cntct"
        android:hint="New Password"
        android:textColorHint="@color/MyGrey" />

    <Button
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/newpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:background="#42A5F5"
        android:onClick="reguser"
        android:text="Sign Up"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/alrdaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup"
        android:layout_marginTop="53dp"
        android:onClick="GoBack"
        android:text="Already have an account?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#A7FFEB" />



</RelativeLayout>
